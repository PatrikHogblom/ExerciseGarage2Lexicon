@model ExerciseGarage2Lexicon.Models.KvittoViewModel

@{
    ViewData["Title"] = "Kvitto";
}




<!DOCTYPE html>
<html>
<head>
    <title>Receipt</title>
</head>
<body>
    <div class="BoxAroundLayout">
        <h2>Parking Receipt</h2>
        <div>Registration Number: @Model.RegistrationNumber</div>
        <div>Check-In Time: @Model.CheckInTime</div>
        <div>Check-Out Time: @Model.CheckOutTime</div>
        <!-- Format TotalParkingTimeInMinutes and Price to show two decimal places -->
        <div>Total Parking Time: @Model.TotalParkingTimeInMinutes.ToString("F2") minutes</div>
        <div>Price: @Model.Price.ToString("F2") kr</div>
        <button onclick="window.print()">Print Receipt</button>


        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["Message"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                @TempData["Error"]
            </div>
        }
    </div>
</body>
</html>
