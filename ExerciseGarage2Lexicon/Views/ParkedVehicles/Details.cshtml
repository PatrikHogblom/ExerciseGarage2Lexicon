@model ExerciseGarage2Lexicon.Models.ParkedVehicle

@{
    ViewData["Title"] = "Details";
}
<div class="BoxAroundLayout">
    <h1>Details</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayName("Vehicle Type")
                @* @Html.DisplayNameFor(model => model.VehicleType) *@
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.VehicleType)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayName("Registration Number")
                @* @Html.DisplayNameFor(model => model.RegistrationNumber) *@
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.RegistrationNumber)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Color)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Color)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Brand)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Brand)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Model)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Model)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayName("Number Of Wheels")
                @* @Html.DisplayNameFor(model => model.NumberOfWheels) *@
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.NumberOfWheels)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayName("Arrival Time")
                @* @Html.DisplayNameFor(model => model.ArrivalTime) *@
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ArrivalTime)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit This Vehicle</a> |
        <a asp-action="Index">Back To Garage</a>
    </div>
</div>